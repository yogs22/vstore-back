<table id="example2" class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>No</th>
      <th>Nama Game</th>
      <th>Kategori</th>
      <th>Nominal</th>
      <th>Status</th>
      <th>Aksi</th>
    </tr>
  </thead>
  <tbody>
    <% for(let i = 0; i < voucher.length; i++) { %>
      <tr>
        <td><%= i + 1 %></td>
        <td><%= voucher[i].name %></td>
        <td><%= voucher[i]?.category?.name ?? '-' %></td>
        <td>
          <% voucher[i].nominals.forEach(nominal => { %>
            <span class="badge badge-warning">
              <%= nominal.coinName %> - <%= nominal.coinQuantity %>
            </span>
          <% }) %>
        </td>
        <td>
          <% if (voucher[i].status === 'Y') { %>
            <span class="badge badge-success">
              Aktif
            </span>
          <% } else { %>
            <span class="badge badge-danger">
              Tidak Aktif
            </span>
          <% } %>
        </td>
        <td>
          <form class="d-inline-block" action="/voucher/status/<%= voucher[i]._id %>?_method=PUT" method="post">
            <% if (voucher[i].status === 'Y') { %>
              <button class="btn btn-danger" data-toggle="tooltip" title="Set Non-Aktif">
                <i class="fas fa-power-off"></i>
              </button>
            <% } else { %>
              <button class="btn btn-success" data-toggle="tooltip" title="Set Aktif">
                <i class="fas fa-check"></i>
              </button>
            <% } %>
          </form>
          <form class="d-inline-block" action="/voucher/delete/<%= voucher[i]._id %>?_method=DELETE" method="POST">
            <a class="btn btn-warning" href="/voucher/edit/<%= voucher[i]._id %>">
              <i class="far fa-edit"></i>
            </a>
            <button class="btn btn-danger" onclick="return confirm('Yakin akan menghapus data ?')">
              <i class="fas fa-trash"></i>
            </button>
          </form>
        </td>
      </tr>
    <% } %>
  </tbody>
</table>
