<table id="example2" class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>No</th>
      <th>Nama Pemilik</th>
      <th>Nama Bank</th>
      <th>No Rekening</th>
      <th>Aksi</th>
    </tr>
  </thead>
  <tbody>
    <% for(let i = 0; i < bank.length; i++) { %>
      <tr>
        <td><%= i + 1 %></td>
        <td><%= bank[i].name %></td>
        <td><%= bank[i].nameBank %></td>
        <td><%= bank[i].noRekening %></td>
        <td>
          <form action="/bank/delete/<%= bank[i]._id %>?_method=DELETE" method="POST">
            <a class="btn btn-sm btn-warning" href="/bank/edit/<%= bank[i]._id %>" data-toggle="tooltip" title="Edit">
              <i class="far fa-edit"></i>
            </a>
            <button class="btn btn-sm btn-danger" onclick="return confirm('Yakin akan menghapus data ?')" data-toggle="tooltip" title="Hapus">
              <i class="fas fa-trash"></i>
            </button>
          </form>
        </td>
      </tr>
    <% } %>
  </tbody>
</table>
