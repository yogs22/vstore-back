<%- include ../../partials/header.ejs %>
<%- include ../../partials/navbar.ejs %>
<%- include ../../partials/sidebar.ejs %>

<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Jenis Pembayaran</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/payment">Jenis Pembayaran</a></li>
            <li class="breadcrumb-item active">Edit</li>
          </ol>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title">
                Form Edit Jenis Pembayaran
              </h3>
            </div>
            <!-- /.card-header -->
            <form action="/payment/edit/<%= payment._id %>?_method=PUT" method="POST">
              <div class="card-body">
                <div class="form-group">
                  <label for="type">Nama Jenis Pembayaran</label>
                  <input type="text" name="type" class="form-control" id="type" placeholder="Masukkan jenis pembayaran" value="<%= payment.type %>" required>
                </div>
                <div class="form-group">
                  <label for="banks">Bank</label>
                  <div class="select2-purple">
                    <select class="form-control select2 w-100" multiple="multiple" name="banks" id="banks" data-placeholder="Pilih Bank" required>
                      <option value="">Pilih Bank</option>
                      <% banks.forEach(bank => { %>
                        <option value="<%= bank._id %>"
                          <% payment.banks.forEach(voucherNominal => { %>
                            <% if(bank._id.toString() === voucherNominal._id.toString()) { %>
                              selected
                            <% } %>
                          <% }) %>
                        >
                          <%= bank.name %> - <%= bank.nameBank %> - <%= bank.noRekening %>
                        </option>
                      <% }) %>
                    </select>
                  </div>
                </div>
              </div>
              <!-- /.card-body -->
              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            </form>
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<%- include ../../partials/footer.ejs %>
<%- include ../../partials/js.ejs %>
